<body>
  <header>üí¨ Asjeno.pl - Czat</header>

  <div id="chat"></div>

  <form id="form">
    <input id="input" type="text" placeholder="Napisz wiadomo≈õƒá..." required />
    <button id="send" type="submit">Wy≈õlij</button>
  </form>

  <script>
    const chat = document.getElementById("chat");
    const form = document.getElementById("form");
    const input = document.getElementById("input");

    form.addEventListener("submit", function(e) {
      e.preventDefault();
      const text = input.value.trim();
      if (!text) return;

      // moja wiadomo≈õƒá
      addMessage(text, "me");

      // przyk≈Çadowa odpowied≈∫ bota
      setTimeout(() => {
        addMessage("Odpowied≈∫ znajomego: " + text, "other");
      }, 1000);

      input.value = "";
    });

    function addMessage(text, type) {
      const div = document.createElement("div");
      div.classList.add("message", type);
      div.textContent = text;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }
  </script>
